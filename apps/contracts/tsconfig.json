{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "hardhat.config.ts",
    "test/**/*",
    "ignition/**/*"
  ],
  "exclude": [
    "node_modules",
    "cache",
    "artifacts"
  ]
}
